<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>MyFilter</filter-name>
        <filter-class>Filter.MyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ViewCourseByLecturerController</servlet-name>
        <servlet-class>controller.exam.ViewCourseByLecturerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeExamController</servlet-name>
        <servlet-class>controller.exam.TakeExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCourseStudent</servlet-name>
        <servlet-class>controller.exam.ViewCourseStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPassServlet</servlet-name>
        <servlet-class>controller.exam.ViewPassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerDashboardController</servlet-name>
        <servlet-class>dashboard.LecturerDashboardController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentDashboardController</servlet-name>
        <servlet-class>dashboard.StudentDashboardController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformatinLecturer</servlet-name>
        <servlet-class>controller.auth.InformatinLecturer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformationStudent</servlet-name>
        <servlet-class>controller.auth.InformationStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCourseByLecturerController</servlet-name>
        <url-pattern>/exam/lecturer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeExamController</servlet-name>
        <url-pattern>/exam/take</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCourseStudent</servlet-name>
        <url-pattern>/student/course</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPassServlet</servlet-name>
        <url-pattern>/view/pass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerDashboardController</servlet-name>
        <url-pattern>/lecturer/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentDashboardController</servlet-name>
        <url-pattern>/student/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformatinLecturer</servlet-name>
        <url-pattern>/view/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformationStudent</servlet-name>
        <url-pattern>/student/info</url-pattern>
    </servlet-mapping>
</web-app>
